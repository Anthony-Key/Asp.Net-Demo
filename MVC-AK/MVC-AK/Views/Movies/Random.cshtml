@model MVC_AK.ViewModels.RandomMovieViewModel
@{
	ViewBag.Title = "Random";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Model.Movie.mName</h1>

@if(Model.Customers.Count == 0)
{
	<p>No Customers.</p>
} else
{
	<ul>
@foreach(var customer in Model.Customers){
	<li>
		@customer.Name
	</li>
}
</ul>
}